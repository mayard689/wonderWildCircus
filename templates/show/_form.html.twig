<section class="container">
    <div class="modal-dialog shadow">
        <div class="modal-content">
            <div class="modal-body">

                {{ form_start(form) }}
                    <div class="form-group row">
                        <div class="col-6">{{ form_label(form.date, 'Choississez une date : ') }}</div>
                        <div class="col-sm-12 col-md-6">{{ form_widget(form.date) }}</div>
                        <div class="col-12">{{ form_errors(form.date) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-6">{{ form_label(form.city, 'Ville : ') }}</div>
                        <div class="col-sm-12 col-md-6">{{ form_widget(form.city) }}</div>
                        <div class="col-12">{{ form_errors(form.city) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-6">{{ form_label(form.quantity, 'Nombre de places disponibles') }}</div>
                        <div class="col-sm-12 col-md-6">{{ form_widget(form.quantity) }}</div>
                        <div class="col-12">{{ form_errors(form.quantity) }}</div>
                    </div>

                    <a class="btn btn-outline-info mr-2" href="{{ path('show_index') }}"><i class="fa fa-arrow-left mr-1"></i>Revenir Ã  la liste</a>
                    <button class="btn btn-info m-2"><i class="fas fa-check mr-1"> </i>{{ button_label|default('Enregistrer') }}</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>

</section>

