{% extends 'base.html.twig' %}

{% block title %}Show index{% endblock %}

{% block body %}
    <h1>Show index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>City</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.date ? show.date|date('Y-m-d') : '' }}</td>
                <td>{{ show.city }}</td>
                <td>{{ show.quantity }}</td>
                <td>
                    <a href="{{ path('show_show', {'id': show.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('show_edit', {'id': show.id}) }}">edit</a>
                    {%  endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('show_new') }}">Create new</a>
    {%  endif %}
{% endblock %}
