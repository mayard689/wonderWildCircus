<form method="post" action="{{ path('show_delete', {'id': show.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ show.id) }}">
    <button class="btn btn-sm btn-info w-100 mt-2"><i class="fas fa-trash-alt mr-1"></i>Supprimer</button>
</form>
