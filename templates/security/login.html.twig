{% extends 'base.html.twig' %}

{% block title %}Connection !{% endblock %}

{% block body %}

    <h1>Merci de vous identifier</h1>

    <section class="container">

        <div class="modal-dialog shadow">
            <div class="modal-content">

                <div class="modal-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que {{ app.user.username }}, <a class="btn btn-primary" href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}



                        <div class="form-group row">
                            <div class="col-4"><label for="inputEmail">Email</label></div>
                            <div class="col-sm-12 col-md-8"><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus></div>
                        </div>

                        <div class="form-group row">
                            <div class="col-4"><label for="inputPassword">Mot de passe</label></div>
                            <div class="col-sm-12 col-md-8"><input type="password" name="password" id="inputPassword" class="form-control" required></div>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        <button class="btn btn-primary ml-0" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
            </div>
        </div>

    </section>
{% endblock %}
