{% extends 'base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Title</th>
                <th>Story</th>
                <th>Age</th>
                <th>Height</th>
                <th>Origin</th>
                <th>Particularity</th>
                <th>Incredible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.name }}</td>
                <td>{{ artist.title }}</td>
                <td>{{ artist.story }}</td>
                <td>{{ artist.age }}</td>
                <td>{{ artist.height }}</td>
                <td>{{ artist.origin }}</td>
                <td>{{ artist.particularity }}</td>
                <td>{{ artist.incredible }}</td>
                <td>
                    <a href="{{ path('artist_show', {'id': artist.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>
                    {%  endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('artist_new') }}">Create new</a>
    {%  endif %}

{% endblock %}
