<section class="container">
    <div class="modal-dialog modal-lg shadow">
        <div class="modal-content">
            <div class="modal-body">

                {{ form_start(form) }}

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.name, 'Nom : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.name, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.name) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.title, 'Titre de la fiche : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.title, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.title) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.story, 'Histoire de l\'artiste') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.story, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.story) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.age, 'Age de l\'artiste : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.age, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.age) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.height, 'Taille : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.height, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.height) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.origin, 'Origine de l\'artiste') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.origin, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.origin) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.particularity, 'Particularité : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.particularity, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.particularity) }}</div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">{{ form_label(form.incredible, 'Fait incroyable : ') }}</div>
                        <div class="col-sm-12 col-md-8">{{ form_widget(form.incredible, {'attr': {'class': 'w-100'}}) }}</div>
                        <div class="col-12">{{ form_errors(form.incredible) }}</div>
                    </div>




                    <a class="btn btn-outline-info m-2" href="{{ path('artist_index') }}"><i class="fa fa-arrow-left mr-1"></i>Revenir à la liste</a>
                    <button class="btn btn-info m-2"><i class="fas fa-check mr-1"> </i>{{ button_label|default('Save') }}</button>

                {{ form_end(form) }}

            </div>
        </div>
    </div>
</section>

