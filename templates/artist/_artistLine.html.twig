{%  set modalName= 'modale-artist-'~artist.id %}

<div class="artist row">

    <div class="col-sm-12 col-md-6 artiste-picture-wrapper" data-aos="fade-up" data-aos-duration="3000" data-aos-easing="ease-in-out">
        <img class="artist-picture"
             src="/upload/artists/{{ artist.picture }}.jpg"
             alt="Photo de {{artist.name}}">
    </div>

    <div class="col-sm-12 col-md-6 artist-data">
        <p class="name">{{ artist.name }}</p>
        <p class="title">{{ artist.title }}</p>
        <p class="story">{{ artist.story }}</p>
        {#
        <p>{{ artist.age }}</p>
        <p>{{ artist.height }}</p>
        <p>{{ artist.origin }}</p>
        <p>{{ artist.particularity }}</p>
        <p>{{ artist.incredible }}</p>#}
        <p>
            {#<a href="{{ path('artist_show', {'id': artist.id}) }}">show</a>#}
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{ modalName }}">
                Launch demo modal
            </button>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('artist_edit', {'id': artist.id}) }}">edit</a>
            {%  endif %}
        </p>
    </div>



    <!-- Modal -->

    <div class="modal fade" id="{{ modalName }}" tabindex="-1" role="dialog" aria-labelledby="{{ modalName }}Label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{artist.name}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ include('artist/show.html.twig', {'artist': artist}) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    
</div>

